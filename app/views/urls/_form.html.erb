<%= form_with model: @url do |form| %>
  <div>
    <%= form.label :link %><br>
    <%= form.text_area :link, placeholder: "https://..." %>
    <% @url.errors.full_messages_for(:link).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>